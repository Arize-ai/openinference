{
  "extends": "../../tsconfig.base.esm.json",
  "compilerOptions": {
    "outDir": "dist/esm",
    "rootDir": "src",
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "tsBuildInfoFile": "dist/esm/tsconfig.esm.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
