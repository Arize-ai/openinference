{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["vitest/globals"],
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "files": [],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "test/__fixtures__/**/*.json",
    "examples/**/*.ts"
  ],
  "exclude": ["test/__snapshots__/**/*.ts"],
  "references": []
}
